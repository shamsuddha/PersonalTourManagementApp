<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imag"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="58dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/temperature" />

            <TextView
                android:id="@+id/tV1"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Temperature"
                android:textColor="@color/yellow"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tempMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Max: 32°C"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/tempMin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Min: 32°C"
                android:textColor="@color/yellow" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="58dp"
                android:layout_height="73dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/humidity" />

            <TextView
                android:id="@+id/tV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Humidity"
                android:textColor="@color/yellow"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="68%"
                android:textColor="@color/yellow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image3"
                android:layout_width="58dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/wind" />

            <TextView
                android:id="@+id/tV3"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Wind"
                android:textColor="@color/yellow"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/windSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Speed:1200"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/windDeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Deg:180°"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/windPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Pressure:180"
                android:textColor="@color/yellow" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/ctemp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="71dp"
        android:layout_marginTop="113dp"
        android:text="20°C"
        android:textColor="	#f00c93"
        android:textColorLink="@android:color/background_dark"
        android:textSize="60dp" />

    <ImageView
        android:id="@+id/tempim"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignTop="@+id/ctemp"
        android:layout_toStartOf="@+id/ctemp" />

    <TextView
        android:id="@+id/cityName"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="Dhaka,BD"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/dateTime"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:gravity="center"
        android:text="Thu/09-09-18"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="186dp"
        android:gravity="center"
        android:text="Its Rainy"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="67dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/cityName"
        android:layout_marginStart="-77dp"
        android:layout_toEndOf="@+id/ctemp"
        android:checked="true"
        android:onClick="toggleClick"
        android:textOff="°F"
        android:textOn="°C" />



</RelativeLayout>