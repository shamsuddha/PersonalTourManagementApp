<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEventMemoriesActivity">

    <TextView
        android:textColor="#505050"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:text="Upload or Take Photo to add moment..."
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/imageViewMemory"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/home"
        />


    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/imageViewMemoryUpload"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/upload_photo"

            />

        <ImageView
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:id="@+id/imageViewMemoryTakePhoto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/take_photo"

            />


    </LinearLayout>

    <EditText
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/memoryDetailsEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Memory Caption here....."
        />

    <Button
        android:id="@+id/saveMemory"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Memory"
        />
</LinearLayout>